<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jack.commonusage.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >            
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            
        </activity>

        <activity
            android:name=".SwipeRefreshLayoutDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/swiperefreshlayout_demo_activity_title"
            android:theme="@style/AppTheme" >
        </activity>        
        <activity
            android:name=".HttpCacheDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/httpcache_demo_activity_title"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".HttpImageDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/httpimage_demo_activity_title"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".PullToRefreshDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/pulltorefresh_demo_activity_title"
            android:theme="@style/AppTheme" >
        </activity>        
        <activity
            android:name=".DropDownListViewDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/dropdownlistview_demo_activity_title"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".ViewPagerDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/viewpager_demo_activity_title"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".SlideOnePageGalleryDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/slide_one_page_gallery_title"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".InfiniteIndicatorDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/infinite_indicator_title"
            android:theme="@style/AppTheme" >
        </activity>                                    
    </application>

</manifest>
